<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #2E2E4F;">

    <!-- Encabezado con botón cerrar -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 0 10 0;">
        <Label text="PLAN PLUS BASIC" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"
               HBox.hgrow="ALWAYS"/>

        <Button text="X" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#cerrarVentana">
            <tooltip>
                <Tooltip text="Cerrar ventana" />
            </tooltip>
        </Button>
    </HBox>

    <!-- Imagen -->
    <ImageView fitHeight="200" fitWidth="300" preserveRatio="true">
        <image>
            <!-- Cambia esta ruta por tu imagen -->
            <Image url="@../images/plan-plus.jpg" />
        </image>
    </ImageView>

    <!-- Características -->
    <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10;">
        <Label text="Características:" style="-fx-text-fill: #73FFFF; -fx-font-size: 18px;"/>

        <HBox spacing="10">
            <Label text="✓" style="-fx-text-fill: green; -fx-font-size: 16px;"/>
            <Label text="Acceso ilimitado" style="-fx-text-fill: white;"/>
        </HBox>

        <HBox spacing="10">
            <Label text="✓" style="-fx-text-fill: green; -fx-font-size: 16px;"/>
            <Label text="Soporte 24/7" style="-fx-text-fill: white;"/>
        </HBox>

        <HBox spacing="10">
            <Label text="✓" style="-fx-text-fill: green; -fx-font-size: 16px;"/>
            <Label text="Actualizaciones constantes" style="-fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Botón aceptar -->
    <Button text="ENTENDIDO" style="-fx-background-color: #73FFFF; -fx-font-size: 16px; -fx-min-width: 150;"
            onAction="#cerrarVentana"/>

</VBox>